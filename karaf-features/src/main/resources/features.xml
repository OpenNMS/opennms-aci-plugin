<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<features name="openmms-plugins-aci-features" xmlns="http://karaf.apache.org/xmlns/features/v1.4.0">

    <repository>mvn:org.opennms.integration.api/karaf-features/${opennms.api.version}/xml</repository>
    <!-- <repository>mvn:org.opendaylight.integration/features-index/0.8.4/xml/features</repository> -->

    <feature name="opennms-plugins-aci" description="OpenNMS :: Plugins :: ACI" version="${project.version}">
        <feature dependency="true">aries-blueprint</feature>
        <feature dependency="true">shell</feature>
        <feature version="${opennms.api.version}" dependency="true">opennms-integration-api</feature>
        <feature version="${okhttp.version}" dependency="true">okhttp</feature>
        <bundle dependency="true">mvn:com.google.guava/guava/${guava.version}</bundle>
        <bundle>mvn:org.opennms.plugins.aci/aci-plugin/${project.version}</bundle>
    </feature>

    <feature name="aci-rest-client" description="aci" version="${project.version}">
        <feature version="${project.version}">aci-rest-client</feature>
	<bundle>mvn:com.googlecode.json-simple/json-simple/${json-simple-version}</bundle>
	<bundle>mvn:javax.websocket/javax.websocket-api/1.1</bundle>
	<bundle>mvn:org.glassfish.tyrus.bundles/tyrus-standalone-client/1.12</bundle>
	<bundle>mvn:org.apache.httpcomponents/httpclient/4.3.6</bundle>
	<bundle>mvn:org.apache.httpcomponents/httpcore/4.3.3</bundle>
    </feature>

    <feature name="netty" description="Netty" version="4.1.30.Final">
        <bundle>mvn:io.netty/netty-codec-http/4.1.30.Final</bundle>
        <bundle>mvn:io.netty/netty-codec/4.1.30.Final</bundle>
        <bundle>mvn:io.netty/netty-handler/4.1.30.Final</bundle>
        <bundle>mvn:io.netty/netty-buffer/4.1.30.Final</bundle>
        <bundle>mvn:io.netty/netty-transport/4.1.30.Final</bundle>
        <bundle>mvn:io.netty/netty-resolver/4.1.30.Final</bundle>
        <bundle>mvn:io.netty/netty-transport-native-epoll/4.1.30.Final/jar/linux-x86_64</bundle>
        <bundle>mvn:io.netty/netty-common/4.1.30.Final</bundle>
        <bundle>mvn:io.netty/netty-transport-native-unix-common/4.1.30.Final</bundle>
    </feature>

    <feature name="okhttp" description="okhttp" version="${okhttp.version}">
        <bundle dependency='true'>mvn:org.apache.servicemix.bundles/org.apache.servicemix.bundles.okio/${okio.bundle.version}</bundle>
        <bundle dependency="true">mvn:org.apache.servicemix.bundles/org.apache.servicemix.bundles.okhttp/${okhttp.bundle.version}</bundle>
        <bundle dependency="true">wrap:mvn:com.squareup.okhttp3/logging-interceptor/${okhttp.version}</bundle>
    </feature>

</features>
